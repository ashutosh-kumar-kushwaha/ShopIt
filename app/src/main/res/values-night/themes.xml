<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopIt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#999999</item>
        <item name="android:letterSpacing">0.05</item>

    </style>
    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:textColor">#999999</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textFontWeight">600</item>
    </style>
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#999999</item>
        <item name="android:background">@drawable/search_view_bg</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>
    <style name="ChipTheme" parent="Widget.Material3.Chip.Input.Icon">
        <item name="android:fontFamily">@font/chip_font</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">600</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomCardView" parent="">
        <item name="shapeAppearanceOverlay">@style/CustomCardViewShapeAppearance</item>
    </style>

    <style name="CustomCardViewShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_24</item>
        <item name="cornerSizeBottomRight">@dimen/dp_24</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
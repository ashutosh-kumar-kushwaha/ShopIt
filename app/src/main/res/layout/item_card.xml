<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:foreground="@drawable/item_card_bg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:padding="@dimen/dp_7"
            android:background="@drawable/item_card_image_bg">

            <ImageView
                android:id="@+id/productImgVw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iphone" />

        </LinearLayout>

        <TextView
            android:id="@+id/productTitleTxtVw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="600"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:textColor="@color/black"
            android:text="Apple Iphone 14 128GB (Product) RED" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8">

            <TextView
                android:id="@+id/ratingTxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="@dimen/dp_4"
                android:text="4.5"
                android:letterSpacing="0.05"
                android:background="@drawable/ratings_bg"
                android:drawablePadding="@dimen/dp_6"
                app:drawableEndCompat="@drawable/star" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_12"
                android:background="@color/black"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/soldTxtVw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12"
                android:text="1,335 sold"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/sp_8"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                android:textColor="@color/white"
                android:letterSpacing="0.05"
                android:background="@drawable/sold_items_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_18">

            <TextView
                android:id="@+id/discountedPriceTxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 77,490"
                android:textSize="@dimen/sp_12"
                android:letterSpacing="0.05"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/originalPriceTxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 77,490"
                android:textSize="@dimen/sp_8"
                android:letterSpacing="0.05"
                android:background="@drawable/strike_through"
                android:layout_marginStart="@dimen/dp_8"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/color2" />
        </LinearLayout>

    </LinearLayout>
</layout>
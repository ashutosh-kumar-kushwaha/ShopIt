<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/item_card_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        android:background="@drawable/item_card_image_bg"
        android:padding="@dimen/dp_6">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shimmer_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_7"
        android:background="@color/shimmer_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_7">

        <View
            android:id="@+id/ratingTxtVw"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_18"
            android:background="@color/shimmer_color"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_11"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_11"
            android:background="@color/black" />

        <View
            android:id="@+id/soldTxtVw"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_18"
            android:background="@color/shimmer_color"
            android:layout_marginStart="@dimen/dp_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_15">

        <View
            android:id="@+id/discountedPriceTxtVw"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_13"
            android:background="@color/shimmer_color"/>

        <View
            android:id="@+id/originalPriceTxtVw"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_9"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_gravity="bottom"
            android:background="@color/shimmer_color" />
    </LinearLayout>

</LinearLayout>